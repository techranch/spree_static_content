<div class='toolbar'>
  <ul class='actions'>
    <li id="new_product_link">
      <%= button_link_to t("static_content.new_page"), '/admin/pages/new', {:icon => 'add'} %>
    </li>
  </ul>
  <br class='clear' />
</div>

<h1><%=t("static_content.static_pages") %></h1>

<table class="index">
	<tr>
		<th><%= Spree::Page.human_attribute_name(:title) %></th>
		<th><%= t("static_content.link") %></th>
		<th><%= Spree::Page.human_attribute_name(:visible) %></th>
		<th><%= t("action") %></th>
  </tr>
	<tbody>
    <%= render :partial => "page_row", :collection => @pages, :as => :page %>
	</tbody>
</table>
